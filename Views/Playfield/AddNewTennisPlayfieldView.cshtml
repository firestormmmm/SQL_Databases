@model ChampionshipMvc3.Models.ViewModels.TennisPlayfieldViewModel

@{
    ViewBag.Title = "AddNewTennisPlayfieldView";
}

<h2>Add New Tennis Playfield</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddNewTennisPlayfield", "Playfield", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Playfield</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TennisPlayfieldModel.PlayfieldName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TennisPlayfieldModel.PlayfieldName)
            @Html.ValidationMessageFor(model => model.TennisPlayfieldModel.PlayfieldName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TennisPlayfieldModel.Surface)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TennisPlayfieldModel.Surface)
            @Html.ValidationMessageFor(model => model.TennisPlayfieldModel.Surface)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.TennisPlayfieldModel.Width)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TennisPlayfieldModel.Width)
            @Html.ValidationMessageFor(model => model.TennisPlayfieldModel.Width)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TennisPlayfieldModel.Length)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TennisPlayfieldModel.Length)
            @Html.ValidationMessageFor(model => model.TennisPlayfieldModel.Length)
        </div>

        <div>
            @Html.DropDownListFor(m => m.SelectedId, Model.OwnersSelectList)
        </div>

        <input type="file" name="files" value="" multiple="multiple" />
        
        <p>
            <input type="submit" value="Create"/>
        </p>
    </fieldset>
}
